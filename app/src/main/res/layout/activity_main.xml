<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.paola.inventarioldp.MainActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="text"
        android:ems="10"
        android:fontFamily="monospace"
        android:layout_marginTop="20dp"
        android:id="@+id/ETUsuario"
        android:hint="Usuario"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:ems="10"
        android:fontFamily="monospace"
        android:layout_marginTop="20dp"
        android:id="@+id/ETPass"
        android:hint="Contraseña"
        android:textSize="24sp" />

    <Button
        android:text="Iniciar sesión como administrador"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/adminBoton"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="goToAdministrar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="ó"
        android:layout_gravity="center"
        android:textSize="40dp" />
    <Button
        android:text="¡Empezar a comprar!"
        android:textSize="20dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/adminBoton"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="goToComprar"/>

</LinearLayout>
